{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2020",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"paths": {
			"~/*": ["./src/*"],
			"@shared/*": ["./src/shared/*"],
			"@typing/*": ["./src/types/*"]
		}
	},
	"exclude": ["node_modules", ".vscode-test", "playground", "docs", "project-files"]
}
