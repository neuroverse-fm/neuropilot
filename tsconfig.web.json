{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2024",
    "lib": [
      "WebWorker"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./out/web" // ESBuild will bundle anyway
  },
  "include": [
    "src/in/web/**/*",
    "src/**/*"
  ],
  "exclude": [
    "src/in/desktop/**/*",
    "src/test/**/*"
  ]
}