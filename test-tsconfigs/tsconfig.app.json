{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "../out/test/desktop",
    "rootDir": "../src/",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "node",
      "vscode"
    ]
  },
  "include": [
    "../src/test/suite/desktop/**/*.ts",
    "../src/test/**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../out",
    "../src/test/suite/web/**/*.ts"
  ]
}